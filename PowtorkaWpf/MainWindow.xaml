<Window x:Class="PowtorkaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowtorkaWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="tresc" Text="Pytanie 1" FontSize="25"/>
        <RadioButton x:Name="odpA" Content="odpA" GroupName="odpowiedziGN" Checked="wybrany_Checked"/>
        <RadioButton x:Name="odpB" Content="odpB" GroupName="odpowiedziGN" Checked="wybrany_Checked"/>
        <RadioButton x:Name="odpC" Content="odpC" GroupName="odpowiedziGN" Checked="wybrany_Checked"/>
        <Button FontSize="25" Click="Sprawdz_Click">Sprawdź</Button>
    </StackPanel>
</Window>
